{
    "name": "workspace-editing-python",
    "private": true,
    "version": "2.10.1",
    "description": "An example app demonstrating client/server editing, built using `@finos/perspective-workspace` and `perspective-python`.",
    "scripts": {
        "start": "pnpm run webpack && pnpm run start:server",
        "start:client": "webpack-dev-server --open",
        "start:server": "PYTHONPATH=../../python/perspective python3 src/server.py",
        "webpack": "webpack --color"
    },
    "keywords": [],
    "license": "Apache-2.0",
    "dependencies": {
        "@finos/perspective": "workspace:^",
        "@finos/perspective-viewer": "workspace:^",
        "@finos/perspective-viewer-d3fc": "workspace:^",
        "@finos/perspective-viewer-datagrid": "workspace:^",
        "@finos/perspective-workspace": "workspace:^"
    },
    "devDependencies": {
        "@finos/perspective-webpack-plugin": "workspace:^",
        "http-server": "^14.1.1",
        "npm-run-all": "^4.1.3",
        "rimraf": "^2.5.2"
    }
}
